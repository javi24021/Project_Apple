{
	"name": "df_silver_category",
	"properties": {
		"folder": {
			"name": "SILVER"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sql_bronze_category",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sql_silver_category",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "derivedColumn3"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "derivedColumn4"
				}
			],
			"scriptLines": [
				"source(output(",
				"          category_id as string,",
				"          category_name as string,",
				"          extra_note as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"derivedColumn3 derive(category_id = upper(trim(replace(category_id,\"\",''))),",
				"          category_name = iif(",
				"    isNull(category_name) || category_name=='',",
				"    'Categoria Desconocida', ",
				"    initCap(trim(replace(category_name, \"\",'')))",
				"    ),",
				"          extra_note = iif(    isNull(extra_note), \"N/A\", trim(extra_note)    )) ~> derivedColumn1",
				"source1 derive(category_id = iif(isNull(category_id) && rlike(category_name, '^(?i)cat-[0-9]+'), split(category_name, ' ')[1], category_id),",
				"          category_name = iif(",
				"    isNull(category_name)|| trim(category_name)=='', 'unknow', category_name",
				"",
				")) ~> derivedColumn2",
				"derivedColumn2 derive(category_name = iif(",
				"    rlike(category_name, '^(?i)cat-[0-9]+'), ",
				"    trim(substring(category_name, locate(' ', category_name) + 1)), ",
				"    category_name",
				")) ~> derivedColumn3",
				"derivedColumn1 aggregate(groupBy(category_id),",
				"     category_name = first(category_name),",
				"          extra_note = first(extra_note)) ~> aggregate1",
				"aggregate1 derive(category_name = upper(replace(category_name, ',', '')),",
				"          extra_note = replace(extra_note, 'comma in name', 'N/A')) ~> derivedColumn4",
				"derivedColumn4 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          category_id as string,",
				"          category_name as string,",
				"          extra_note as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          category_id,",
				"          category_name",
				"     )) ~> sink1"
			]
		}
	}
}