					"scripts": [
						{
							"type": "NonQuery",
							"text": "\nIF NOT EXISTS (SELECT * FROM sys.schemas WHERE name = 'gold') \nBEGIN \n    EXEC('CREATE SCHEMA [gold]') \nEND\n\n\n-- DIM_PRODUCTS: Con el nombre de categor√≠a y la fecha de lanzamiento\nDROP TABLE IF EXISTS [gold].[dim_products];\nSELECT \n    p.[product_id],\n    p.[product_name],\n    c.[category_name],\n    p.[launch_date],\n    p.[price]\nINTO [gold].[dim_products]\nFROM [silver].[products] p\nLEFT JOIN [silver].[category] c ON p.[category_id] = c.[category_id];\n\n\nDROP TABLE IF EXISTS [gold].[dim_stores];\nSELECT \n    [store_id],\n    [store_name],\n    [city],\n    [country],\n    [opened]\nINTO [gold].[dim_stores]\nFROM [silver].[stores];\n\n\n\nDROP TABLE IF EXISTS [gold].[fact_sales];\nSELECT \n    s.[sale_id],\n    s.[sale_date],\n    s.[store_id],\n    s.[product_id],\n    s.[quantity],\n    w.[claim_id],\n    w.[claim_date],\n    ISNULL(w.[repair_status], 'SIN RECLAMO') AS [repair_status]\nINTO [gold].[fact_sales]\nFROM [silver].[sales] s\nLEFT JOIN [silver].[warranty] w ON s.[sale_id] = w.[sale_id];"
						}
					],
